{
    "extends" : "./tsconfig.json",
    "compilerOptions" : {
        "outDir" : "./dist",
        "module" : "esnext",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict":true,
        "noEmit": false,
        "isolatedModules": false,
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["es2020"]
    },
    "include": ["server.mts", "**/*.mts", "**/*.ts"],
}